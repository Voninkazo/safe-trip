---
const { email } = Astro.params;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
    <title>HappyTravel</title>
  </head>
  <body>
    <section
      class="flex justify-center h-screen fixed top-0 z-20 w-screen items-center"
    >
      <div class="bg-blue-900 py-11 px-8 text-lg text-white">
        <div class="bg-white w-3/12 m-auto rounded-full mb-11">
          <img src="/icons/check-mark.gif" width="100%" />
        </div>
        <div class="w-1/2 m-auto">
          <p>Your payment has been sent successfully</p>
          <p class="my-3">
            Please check your receipt in your email box <span
              class="font-semibold">{email}</span
            >.
          </p>
          <p>
            If you have any questions, please email
            <a href="mailto:orders@example.com" class="text-3green-900"
              >orders@example.com</a
            >.
          </p>
          <p class="mt-3">Thank you for trusting our service</p>
          <div class="mt-6">
            <a href="/" class="font-semibold underline">Back to home</a>
          </div>
        </div>
      </div>
    </section>
  </body>
</html>
